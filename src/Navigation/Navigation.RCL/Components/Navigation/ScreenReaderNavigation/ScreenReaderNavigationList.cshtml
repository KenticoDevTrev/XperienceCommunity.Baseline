@using Navigation.Components.Navigation.ScreenReaderNavigation
@model ScreenReaderNavigationListViewModel
<li bl-navitem-class bl-navitem-references bl-navigation-item="@Model.NavItem">
    <a class="visually-hidden-focusable" aria-keyshortcuts="ArrowUp ArrowDown Left Right" bl-navitem-link bl-navigation-item="@Model.NavItem">
        @Html.Raw(Model.NavItem.LinkText)
    </a>
    @if (Model.NavItem.Children.Any())
    {
        <ul>
            @foreach (var childNavItem in Model.NavItem.Children)
            {
                <partial name="/Components/Navigation/ScreenReaderNavigation/ScreenReaderNavigationList.cshtml" model="new ScreenReaderNavigationListViewModel(childNavItem, Model.Level+1)" />
            }
        </ul>
    }
</li>